@using Volton.ViewModels
@model IEnumerable<HomeCardViewModel>

<div class="mb-4">
    <label class="text-primary text-small d-block text-start mb-2">I'm interested in:</label>

    <div class="d-flex justify-content-center gap-3 flex-wrap">
        @foreach (var card in Model)
        {
            var value = card.Title.ToLower().Contains("home") ? "home"
                : card.Title.ToLower().Contains("business") ? "business"
                : card.Title.ToLower().Contains("apartment") ? "appartment"
                : "";

            <label class="option-card bg-secondary" data-value="@value" data-id="@card.Id" style="cursor:pointer;">
                <input type="radio" name="selectedPlanId" value="@card.Id" class="d-none" />
                <div class="checkmark d-none"><i class="fas fa-check-circle"></i></div>
                <img src="@Url.Content(card.ImagePath)" alt="@card.Title" class="img-fluid mb-2" style="width: 40px;">
                <div class="text-primary fw-medium text-small">@card.Title</div>
            </label>
        }
    </div>
</div>



